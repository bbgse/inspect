{
  "name": "@bbgse/inspect",
  "type": "module",
  "version": "5.2.0",
  "description": "Inspect utility for Node.js",
  "author": "bbgse",
  "license": "MIT",
  "homepage": "https://github.com/bbgse/inspect",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbgse/inspect.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "compile": "tsc -p tsconfig.json",
    "clean": "rm -rf lib",
    "build": "npm run clean && npm run build:cjs && npm run build:types",
    "build:esm": "esbuild src/index.ts --outfile=lib/index.mjs --sourcemap --bundle --platform=node --target=node18 --format=esm",
    "build:cjs": "esbuild src/index.ts --outfile=lib/index.cjs --sourcemap --bundle --platform=node --target=node18 --format=cjs",
    "build:types": "tsc -p tsconfig-types.json",
    "release": "bumpp && npm publish",
    "prepare": "simple-git-hooks",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "get-func-name": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "bumpp": "^9.2.0",
    "esbuild": "^0.19.5",
    "prettier": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx prettier --check ."
  }
}
