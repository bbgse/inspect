{
  "include": ["src", "test"],
  "exclude": ["node_modules", "lib", "coverage"],
  "compilerOptions": {
    "module": "esnext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "target": "es2020",
    "noEmit": true,
    "lib": ["es2022"],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Bundler"
  }
}
